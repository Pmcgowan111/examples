{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["BASE_PATH"],
  "tasks": {
    "build2": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "../../packages/examples/bin/build.mjs",
        "../../packages/examples/src/{CheesyCanvas.jsx,deterministic.js,vite-plugin-monkey.js,vite.config.ts}"
      ],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "dist/**",
        "../../packages/examples/bin/test.mjs",
        "../../packages/examples/{playwright.config.ts,snapshot.test.js}"
      ],
      "cache": true
    },
    "website#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "next.config.mjs"],
      "outputs": [".next/**", "!.next/cache/**", "out/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
